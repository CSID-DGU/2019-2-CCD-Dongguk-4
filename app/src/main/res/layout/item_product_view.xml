<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    //타이틀
    <TextView
        android:id="@+id/txt_pdtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="제목"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            app:srcCompat="@android:drawable/ic_menu_view" />

        <TextView
            android:id="@+id/txt_viewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="조회수"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/txt_loveNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="찜수"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_pdtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="가격"
        android:textSize="20sp" />

    //divider
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" />


    <TextView
        android:id="@+id/txt_pdtContexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="상세내용"
        android:textSize="20sp" />

    //divider
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_providerProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:id="@+id/txt_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="생산자"
            android:textSize="20dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_goPrvider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="판매상품 모두보기>" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_productDetail"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/filter_bar_container"
        android:background="@android:color/white"
        tools:listitem="@layout/item_detailreview" />
    <Button
        android:id="@+id/btn_goReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상점후기 모두보기>" />
</LinearLayout>