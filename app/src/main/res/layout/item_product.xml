<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_pdt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/one" />

    <TextView
        android:id="@+id/txt_pdtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_pdt"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toLeftOf="@+id/txt_pdtPrice"
        android:layout_toRightOf="@+id/img_pdt"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="상추" />


    <TextView
        android:id="@+id/txt_userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pdtName"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/img_pdt"
        android:gravity="center_vertical"
        tools:text="pasd394" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rating_pdtRating"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/txt_pdtName"
        android:layout_toRightOf="@id/txt_userId" />

    <TextView
        android:id="@+id/txt_pdtRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/txt_pdtName"
        android:layout_toRightOf="@+id/rating_pdtRating"
        android:gravity="center_vertical"
        tools:text="(10)" />

    <TextView
        android:id="@+id/txt_pdtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_pdtName"
        android:layout_toRightOf="@id/img_pdt"
        android:layout_below="@+id/txt_userId"
        tools:text="채소" />

    <TextView
        android:id="@+id/txt_bulling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_pdtCategory"
        android:layout_toRightOf="@+id/txt_pdtCategory"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/txt_pdtRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_pdtCategory"
        android:layout_toRightOf="@+id/txt_bulling"
        tools:text="순천" />

    <TextView
        android:id="@+id/txt_pdtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="$$$" />

</RelativeLayout>
